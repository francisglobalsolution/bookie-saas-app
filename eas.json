{
  "cli": { "version": ">= 10.0.0" },
  "build": {
    "base": {
      "developmentClient": false,
      "autoIncrement": true,
      "env": { "SENTRY_SKIP_AUTO_SETUP": "1" },
      "android": { "buildType": "app-bundle" }
    },
    "dev": {
      "extends": "base",
      "channel": "dev",
      "env": {
        "API_URL": "@project:API_URL_DEV",
        "SENTRY_DSN": "@project:SENTRY_DSN_DEV",
        "USE_MOCKS": "@project:USE_MOCKS_DEV"
      },
      "ios": { "autoIncrement": "buildNumber", "simulator": true },
      "android": { "autoIncrement": "versionCode", "buildType": "apk" },
      "distribution": "internal"
    },
    "staging": {
      "extends": "base",
      "channel": "staging",
      "env": {
        "API_URL": "@project:API_URL_STAGING",
        "SENTRY_DSN": "@project:SENTRY_DSN_STAGING",
        "USE_MOCKS": "@project:USE_MOCKS_STAGING"
      },
      "ios": { "autoIncrement": "buildNumber", "simulator": true },
      "android": { "autoIncrement": "versionCode", "buildType": "apk" },
      "distribution": "internal"
    },
    "qa": {
      "extends": "base",
      "channel": "qa",
      "env": {
        "API_URL": "@project:API_URL_QA",
        "SENTRY_DSN": "@project:SENTRY_DSN_QA",
        "USE_MOCKS": "@project:USE_MOCKS_QA"
      },
      "ios": { "autoIncrement": "buildNumber" },
      "android": { "autoIncrement": "versionCode" }
    },
    "prod": {
      "extends": "base",
      "channel": "prod",
      "env": {
        "API_URL": "@project:API_URL_PROD",
        "SENTRY_DSN": "@project:SENTRY_DSN_PROD"
      },
      "ios": { "autoIncrement": "buildNumber" },
      "android": { "autoIncrement": "versionCode" }
    }
  },
  "submit": {
    "dev":     { "android": { "track": "internal" },   "ios": {} },
    "staging": { "android": { "track": "internal" },   "ios": {} },
    "qa":      { "android": { "track": "beta" },       "ios": {} },
    "prod":    { "android": { "track": "production" }, "ios": {} }
  }
}
